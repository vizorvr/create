{{#with this.keys}}
	<div class="twocol clearfix">
		<div class="col left">
			<h3>Global</h3>

			<dl class="clearfix">
				<dt>Build / Program</dt>
				<dd>{{{toggleMode}}}</dd>

				<dt>Editor / VR Camera</dt>
				<dd>{{{toggleEditorCamera}}}</dd>

				<dt>Enter fullscreen</dt>
				<dd>{{{toggleFullScreen}}}</dd>

				<dt>Exit fullscreen</dt>
				<dd><kbd class="wide">Esc</kbd></dd>

				<dt>Cut</dt>
				<dd>{{{mod_ctrl}}} + <kbd>x</kbd></dd>

				<dt>Copy</dt>
				<dd>{{{mod_ctrl}}} + <kbd>c</kbd></dd>

				<dt>Paste</dt>
				<dd>{{{mod_ctrl}}} + <kbd>v</kbd></dd>

				<dt>Undo</dt>
				<dd>{{{mod_ctrl}}} + <kbd>z</kbd></dd>

				<dt>Hide all panels</dt>
				<dd>{{{toggleFloatingPanels}}}</dd>

				<dt>Focus on chat panel</dt>
				<dd>{{{focusChatPanelAlt}}}</dd>

				<dt>Search patches</dt>
				<dd>{{{focusPresetSearch}}} / {{{focusPresetSearchAlt}}}</dd>
			</dl>
		</div>
		<div class="col right">
			<h3>Build</h3>
			<dl>
				<dt>Move</dt>
				<dd>{{{modifyModeMove}}}</dd>

				<dt>Rotate</dt>
				<dd>{{{modifyModeRotate}}} / {{{mod_ctrl}}}</dd>

				<dt>Scale</dt>
				<dd>{{{modifyModeScale}}} / {{{mod_shift}}} + {{{mod_ctrl}}}</dd>

				<dt>Zero VR camera</dt>
				<dd>{{{zeroVRCamera}}}</dd>
			</dl>
			<h3>Program</h3>
			<dl>
				<dt>Handy patches</dt>
				<dd><kbd>0</kbd> - <kbd>9</kbd></dd>

				<dt>Inspect patches</dt>
				<dd>{{{openInspector}}}</dd>

				<dt>Go to parent graph</dt>
				<dd>{{{gotoParentGraphAlt}}}</dd>

				<dt>View source</dt>
				<dd>{{{viewSource}}}</dd>
			</dl>
		</div>
	</div>
{{/with}}