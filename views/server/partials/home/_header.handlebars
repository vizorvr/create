{{#unless noHeaderTag}}<header>{{/unless}}
<nav class="primary clearfix in" style="position:relative">
    <h1 id="brandTop" class="brandTop">
        <a href="/" class="nofx"><span>Patches</span>
        <svg><use xlink:href="#patches-wordmark" /></svg>
        </a>
    </h1>

    <ul class="nomobile">
        {{!-- <li id="navAbout"><a href="/about">About</a></li> --}}
        <li id="navTutorials"><a href="//blog.vizor.io">Tutorials</a></li>
        {{#if user.username}}
            <li class="account">
            {{>userpulldown user}}
            </li>
        {{else}}
            <li class="signin nomobile">
                <a id="homeSignin" href="#/login" class="sign-btn">Sign in</a>
            </li>
            <li class="signup nomobile">
                <a id="homeSignup" class="sign-btn btn" href="#/signup">Sign up</a>
            </li>

        {{/if}}
    </ul>

    <div class="mobileonly" style="position:absolute; top:14px; right: 10px; width: 30px; height: 30px; display: flex; justify-content: center;">
        <button class="nofx" id="mobileMenuOpenButton">
            <img src="/images/home/xmenu.png" width="14" height="13" alt="" />
        </button>
    </div>
</nav>
{{#unless noHeaderTag}}</header>{{/unless}}