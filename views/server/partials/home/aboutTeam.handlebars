{{#*inline 'teamMember'}}
<div class="team-member">
	<div class="member-pic">
		<img src="/images/home/{{image}}" alt="{{name}}'s photo" />
		{{#if link}}
			<div class="pic-rollover">
				{{#if linkIcon}}
					<svg class="icon"><use xlink:href="#{{linkIcon}}"></use></svg>
				{{else}}
					<svg class="icon"><use xlink:href="#icon-www"></use></svg>
				{{/if}}
			</div>
		{{/if}}
	</div>
	<h4><a href="{{link}}" target="_blank" title="View info" class="person-name profile-link">{{name}}</a></h4>
	<span class="person-position">{{position}}</span>
</div>
{{/inline}}

