<div class="header-background"> </div>
<div class="fixed-table-container-inner scrollbar">
	<table class="table table-hover table-condensed table-striped">
		<thead>
			<tr>
				<th class="thumbnail-header"><div class="th-inner">Thumbnail</div></th>
				<th class="name-header"><div class="th-inner">Name</div></th>
				<th class="size-header"><div class="th-inner">Size</div></th>
			</tr>
		</thead>
		<tbody>
		{{#each files}}
			<tr class="file-row{{#if selected}} success{{/if}}" 
				data-url="{{scaled.url}}">
				<td><img src="{{scaledThumbnail.url}}"/></td>
				<td>{{scaled.path}}</td>
				<td>{{scaled.width}}x{{scaled.height}}</td>
			</tr>
		{{else}}
			<tr class="file-row">
				<td class="name" colspan="3">No files found</td>
			</tr>
		{{/each}}
		</tbody>
	</table>
</div>
